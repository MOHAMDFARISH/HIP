{
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "/api/sitemap.xml"
    },
    {
      "source": "/robots.txt",
      "destination": "/api/robots.txt"
    },
    {
      "source": "/blog/:slug",
      "destination": "/api/blog/:slug"
    },
    {
      "source": "/book",
      "destination": "/api/pages/book"
    },
    {
      "source": "/author",
      "destination": "/api/pages/author"
    },
    {
      "source": "/blog",
      "destination": "/api/pages/blog-listing"
    },
    {
      "source": "/",
      "destination": "/api/pages/home"
    },
    {
      "source": "/:path((?!api/|.*\\..*).*)",
      "destination": "/index.html"
    }
  ]
}