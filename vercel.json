{
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "/api/sitemap.xml"
    },
    {
      "source": "/robots.txt",
      "destination": "/api/robots.txt"
    },
    {
      "source": "/blog/:slug",
      "destination": "/api/blog/:slug"
    },
    {
      "source": "/:page(book|author|blog|reviews|media|faq|contact)",
      "destination": "/api/pages/:page"
    },
    {
      "source": "/",
      "destination": "/api/pages/"
    },
    {
      "source": "/:path((?!api/|.*\\..*).*)",
      "destination": "/index.html"
    }
  ]
}